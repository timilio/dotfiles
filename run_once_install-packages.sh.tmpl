#!/bin/sh

echo 'Installing rustup...'
export RUSTUP_HOME="$HOME/.local/share/rustup"
export CARGO_HOME="$HOME/.local/share/cargo"
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --no-modify-path

echo 'Installing ghcup...'
export BOOTSTRAP_HASKELL_MINIMAL=yes
export BOOTSTRAP_HASKELL_NONINTERACTIVE=yes
export GHCUP_USE_XDG_DIRS=true
export STACK_ROOT="$HOME/.local/share/stack"
curl --proto '=https' --tlsv1.2 -sSf https://get-ghcup.haskell.org | sh
ghcup install stack latest --set

echo 'Installing neovim, fish and kitty...'
{{ if eq .chezmoi.os "linux" -}}
{{   if eq .chezmoi.osRelease.id "fedora" -}}
echo 'Type password to install fish and neovim'
sudo dnf install neovim fish kitty
{{   else -}}
echo 'Type password to install fish and neovim'
sudo pacman -S neovim fish kitty
{{   end -}}
{{ else if eq .chezmoi.os "darwin" -}}
brew install neovim fish kitty
{{ end -}}

echo 'Installing fish packages...'
fish --command 'fundle install'

echo 'Done! Now you can start kitty!'
